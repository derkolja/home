[user]
	name = Kolja Schneider
	email = kolja.schneider@solectrix.de
[core]
	pager = less -x4
	editor = nvim

[sendemail]
	to = ralf.truebenbach@solectrix.de
	cc = kolja.schneider@solectrix.de
	from = "kolja.schneider@solectrix.de"
	confirm = never
[alias]
	up = rebase trunk-sx
	st = status -uno
	ci = commit
	ld = log --decorate
	lg = log --graph --pretty='%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
	reabse = rebase
	brnach = branch

[merge]
	tool = meld
[rebase]
	autostash = true
[push]
	default = simple
[gui]
	fontdiff = -family Hack -size -12 -weight normal -slant roman -underline 0 -overstrike 0
[tag]
	sort = version:refname
